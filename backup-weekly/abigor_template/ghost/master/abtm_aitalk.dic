OnAITalk
{
	if RAND(100) < (communicateratio - 1)
 	{
 		OnStartCommunicate
	}
	else
	{
		if offscreenflag == 1
		{
			OnOffscreen("AITALK")
		}
	}

}

OnKeyPress
{
	case reference[0]
	{
		when "t"
		{OnAiTalk}
