}
OnHisHerTheirTeach
{
	tempnoun3 = reference0 //this stores the pronoun value temporarily in reference0

		if reference0  == "" || reference0 == " " || reference0 == "   " //This is if the user doesn't put in a pronoun at all.
			{"\0\s[6]\_v[mus\HELP_text.mp3] * (You didn't type anything into the box. Whoops!)\![open,inputbox,OnHisHerTheirTeach,-1]"
			}
		else //Continuing on
			{
			"\0\s[6]\_v[mus\HELP_text.mp3] * Your pronouns are %(tempnoun1), %(tempnoun2), and %(tempnoun3).\n * Does that seem right? \w5\n\n[half]\_q/
			\![*]\q[Looks good!,setpronouns]\n/
			\![*]\q[Let's try that again...,choicecustom]"
			
			}
	
	
}
	
	
Select.setpronouns
{

	heshe = tempnoun1
	himher = tempnoun2
	hisher = tempnoun3
	mrms = "friend"
	--
	"\0\s[6]\_v[mus\sound_FLOWEY.mp3] * Good. %(mrms).\s[0]"
	"\0\s[6]\_v[mus\HELP_text.mp3] * (F_lowe_y will now call you by the correct pronouns.)\n\n * (You can always change this later)\s[0]"
	--
	if firstboot == 1
	{
		firstboot = 0
		--
		OnTeachName
	}
	else
	{
		"\e"
	}
	
}

	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
