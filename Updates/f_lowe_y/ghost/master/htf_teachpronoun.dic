Select.choicecustom //for people with neopronouns or mixed pronouns.
{

	--
	"\0\s[6]\_v[mus\HELP_text.mp3] * (Enter the first of your pronouns, ex.'they')\![open,inputbox,OnHeSheTheyTeach,-1]"
}

displayPronouns
{
	"\0\s[6]\_v[mus\HELP_text.mp3] * Your pronouns are %(heshe), %(himher), and %(hisher)."
}

OnTeachCustomPronoun
{
	if reference0 == "TEACHCUSTOMPRONOUN" //event call came from
		{
		"\0\s[6]\_v[mus\HELP_text.mp3] * (Enter your nominative pronoun, ex.'they')\![open,inputbox,OnHeSheTheyTeach,-1]"

		}
