referenceTest
{
	_display = ""
	_num = 0
	foreach reference; _ref //Each time the loop runs, _ref will store the next value in the array, until the array ends
	{
		_ref = SHIORI3FW.EscapeAllTags(_ref)
		_display += "\n%(_num)- %(_ref)"
		_num ++
	}
	--
	"\_q\b2\![set,autoscroll,disable]%(_display)\x"
}

referenceTestOld
{
	_string = "0-%(reference0)\n 1-%(reference1)\n 2-%(reference2)\n 3-%(reference3)\n 4-%(reference4)\n 5-%(reference5)\n 6-%(reference6)\n 7-%(reference7)\n 8-%(reference8)\n 9-%(reference9)"
	
	_display = REPLACE("%(_string)","\e","")
	_display = REPLACE("%(_display)","\c","")
	_display = REPLACE("%(_display)","\x","")
	
	"\b2\![set,autoscroll,disable]\_q  %(_display)\x"
	
}

