OnFirstBoot
{
	"\![set,otherghosttalk,true]"
	--
	"This is my first time booting.\_w[500]"
}

OnBoot
{
	"\![set,otherghosttalk,true]"
	--
	"I have booted.\_w[500]"
}

OnClose
{
	if (_runhour == 0) && (_runmin <= 5)
	{
		"Goodbye. Run Time: %(_runhour):%(_runmin).\_w[500]"
		passmin = 0
		passsec = 0
 	}
 	else 
 	{
		if ghostexcount > 1
		{
			_num = RAND(ghostexcount)
			_pick ="%(ghostexlist[_num])"
			"Goodbye %USER. Goodbye %(_pick).Run Time: %(_runhour):%(_runmin).\_w[500]"
		}
		else
		{
			"Goodbye %USER.\_w[500]"
		}
 	}
 	--
	ERASEVAR("hourlyArray")
	--
	"\-" 
}

OnCloseAll
{
	if ghostexcount > 0
	{
		"Goodbye everyone.\_w[500] "
	}
	else
	{
		"Goodbye, %(user).\_w[500] "
	}
	--
	if runhour > 1
	{
		cumuhour = (cumuhour + passhour)
	}
	--
	case runhour
	{
		when 0
		{
			"I have been running for less than an hour."
		}
		when 1-4
		{
			"I have been running for %(runhour) hours"
		}
		when 5-11
		{
			"I have been running for %(runhour) hours"
		}
		when 12-16
		{
			"I have been running for %(runhour) hours"
		}
		when 17-20
		{
			"I have been running for %(runhour) hours"
		}
		when 21-23
		{
			"I have been running for %(runhour) hours"
		}
		others
		{
			"I have been running for %(runhour) hours. That's more than a full day."
		}
	}
	--
	ERASEVAR("hourlyArray")
	--
	"\-"
}

OnGhostChanged
{
	hourlyArray = IARRAY
	"\![set,otherghosttalk,true]\0\s[0]"
	--
	_selfname = TOSTR(sakuraname)
	if reference0 == _selfname
	{
		"Reloaded\_w[500]"
	}
	else
	{
		"%(reference0) has unloaded.\_w[500]"
	}
	--
	"\e"
}

OnGhostChanging
{
	ERASEVAR("hourlyArray")
	_selfname = TOSTR(sakuraname)
	if reference0 == _selfname
	{
		"Reloading."
	}
	else
	{
		"Switching."
	}
	--
	"\e"
}

