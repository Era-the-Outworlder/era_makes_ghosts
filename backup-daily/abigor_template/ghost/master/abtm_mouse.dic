}

/* ############# mouseMoveSCOPE ############# */

mouseMoveSAKURA
{
	_source = _argv[0]
	_collision = "%(reference4)"

	case _source
	{
		when "OnMouseMove"
		{
			case _collision 
			{
				when "Body"
				{
					stroke++
					_div = stroke%13
					if _div == 0
					{"Body: %(stroke)"}
				}
				when "Face" 
				{
					smack++
					_div = smack%13
					if _div == 0
					{"Face: %(smack)"}
				}
				others 
				{
					touch++
					_div = touch%13
					if _div == 0
					{"Others: %(touch)"}
				}
			}
		}
		when "OnMouseHover"
		{
			// Call OnSecondChange with arguments for a counter
		}
		when "OnMouseLeaveAll"
		{
			stroke = 0
			smack = 0
			touch = 0
		}
		others
		{}
	}
}

