// ----System display related----
ap
{
 	if ampm
 		{"PM"}
 	else
 		{"AM"}
}

dishour
{
	if hour12 == 0; "12"
	else; "%(hour12)"
}

dismin
{
	if minute >= 0 && minute <=9; "0%(minute)"
	else; "%(minute)"
}

disTime
{
	"%(dishour):%(dismin) %(ap)"
}

disDate
{
	"%(dayShort) %(month)/%(day)/%(year)"
}

dayShort
{
	if weekday == 0
	{"Sun"}
	elseif weekday == 1
	{"Mon"}
	elseif weekday == 2
	{"Tue"}
	elseif weekday == 3
	{"Wed"}
	elseif weekday == 4
	{"Thu"}
	elseif weekday == 5
	{"Fri"}
	else
	{"Sat"}
}

dayLong
{
	if dayShort == "Tue"
	{"Tuesday"}
	elseif dayShort == "Wed"
	{"Wednesday"}
	elseif dayShort == "Thur"
	{"Thursday"}
	elseif dayShort == "Sat"
	{"Saturday"}
	else
	{"%(dayShort)day"}
}



